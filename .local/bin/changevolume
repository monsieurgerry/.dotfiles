#!/bin/bash

volume=$(pamixer --get-volume)

function send_notification() {
    barra=$(seq --separator="‚îÅ" 0 "$((volume / 5))" | sed 's/[0-9]//g')
    paplay ~/.local/share/sounds/pop.ogg
    dunstify -i "volume-$STATUS" -a "changevolume" -r 9993 -u low "  $barra"
}

function check_status() {
    if [[ $volume -gt 79 ]]; then
        STATUS="high"
    elif [[ $volume -gt 49 ]]; then
        STATUS="mid"
    elif [[ $volume -gt 1 ]]; then
        STATUS="low"
    elif [[ $volume -eq 0 ]]; then
        STATUS="off"
    else
        STATUS="mid"
    fi
}

case $1 in
up)
	pamixer -u
	pamixer -i 5 --allow-boost
    check_status
	send_notification
	;;
down)
	pamixer -u
	pamixer -d 5 --allow-boost
    check_status
	send_notification
	;;
mute)
	pamixer -t
	if $(pamixer --get-mute); then
		dunstify -i volume-mute -a "changevolume" -t 2000 -r 9993 -u low "Muted"
	else
        check_status
		send_notification
	fi
	;;
esac
