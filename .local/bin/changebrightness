#!/bin/bash

function send_notification() {
    brightness=$(printf "%.0f" $(xbacklight))
    barra=$(seq --separator="‚îÅ" 0 "$((brightness / 5))" | sed 's/[0-9]//g')
    dunstify -a "changebrightness" -i "brightness" -r 9993 -u low "  $barra"
}

case $1 in
up)
    xbacklight -inc 10
	send_notification $1
	;;
down)
    xbacklight -dec 10
	send_notification $1
	;;
esac
